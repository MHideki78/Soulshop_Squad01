<section class="m-1">
  <a href="/cupon/novo" class="btn btn-dark">
    <i class="bi bi-plus"></i>
    Adicionar Cupon
  </a>
  <hr />
  <div class="table-responsive">
    <table class="table">
      <thead>
        <th>Codigo</th>
        <th>Valor</th>
        <th>validade</th>
        <th>Ações</th>
      </thead>
      <tbody>
        {{#each cupons}}
          <tr>
            <td>{{this.codigo}}</td>
            <td>{{this.valor}}</td>
            <td>{{this.validade}}</td>
            <td>
              <div class="d-flex">
                <div>
                  <a
                    href="/cupons/editar/{{this._id}}"
                    class="btn btn-sm btn-warning mx-1"
                  >
                    <i class="bi bi-pencil"></i>
                  </a>
                </div>
                <div>
                  <form action="/cupons/deletar" method="POST">
                    <input
                      name="id"
                      type="hidden"
                      value="{{this._id}}"
                    />
                    <button class="btn btn-sm btn-danger">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>